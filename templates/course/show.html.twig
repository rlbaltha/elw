{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block subnav %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('doc_index') }}">Documents</a>
    </li>
{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <td>Students</td>
        </tr>
        {% for classlist in course.classlists %}
            {% for user in classlist.user %}
                <tr>
                    <td>{{ user.firstname }} {{ user.lastname }}</td>
                </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('course_index') }}">back to list</a>

    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block subnav %}
    <a class="navbar-brand" href="#">{{ course.name }}</a>
    <li class="nav-item">
        <a class="nav-link" href="{{ course_path('doc_index') }}">Documents</a>
    </li>
{% endblock %}

{% block body %}

    {% if course.announcement != '' %}
    <div class="alert alert-primary">{{ course.announcement|raw }}</div>
    {% endif %}

    {% if is_granted('ROLE_INSTRUCTOR') %}
    {{ include('course/_delete_form.html.twig') }}
    <a class="btn btn-primary float-right" href="{{ course_path('approve_all_pending', {'courseid': course.id}) }}">Approve All Pending</a>
    <a class="btn btn-primary float-right" href="{{ course_path('course_announcement', {'courseid': course.id}) }}">Edit Announcement</a>
    <a class="btn btn-primary float-right" href="{{ course_path('course_edit', {'id': course.id}) }}">Edit Course</a>
    <a class="btn btn-primary float-right" href="{{ path('classlist_new') }}">Add Students</a>

    <table class="table">
        <thead>
        <tr>
            <th>Students</th>
            <th>Status</th>
            <th>Role</th>
        </tr>
        <thead>
        {% for classlist in course.classlists %}
                <tr>
                    <td>{{ classlist.user.firstname }} {{ classlist.user.lastname }}</td>
                    <td><span class="badge badge-primary">{{ classlist.status }}</span></td>
                    <td>{{ classlist.role }}</td>
                </tr>
        {% endfor %}
        </thead>
    </table>
    {% endif %}

    {% for classlist in user.classlists %}
    {% if classlist.course.id == course.id and classlist.status=='Pending' %}
        <div class="alert alert-primary">Your entry to this course is pending.  Please check back soon.</div>
    {% endif %}
    {% endfor %}



{% endblock %}

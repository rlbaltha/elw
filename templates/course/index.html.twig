{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}

    {% for message in app.flashes('lti') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <h1>Courses</h1>

    <a class="btn btn-primary float-right" href="{{ path('course_new') }}">Create Course</a>

    <table class="table">
        <thead>
            <tr>
                <th>My Courses</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><a href="{{ path('course_show', {'courseid': course.id}) }}">{{ course.name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

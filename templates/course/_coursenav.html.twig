{% if role=='Instructor' %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <h1 class="mr-5">Course Home</h1>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ course_path('course_edit', {'id': course.id}) }}">Edit
                            Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ course_path('course_announcement', {'courseid': course.id}) }}">Edit
                            Announcement</a>
                    </li>
                    {% if course.ltiId != '' %}
                        <li class="nav-item">
                            <a class="nav-link"
                               href="{{ course_path('ags_index', {'courseid': course.id}) }}">eLC Gradebook Setup</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a id="delete-trigger" class="nav-link" href="#">Delete Course</a>
                        {{ include('course/_delete_form.html.twig') }}
                    </li>
                    {% if course.ltiId > 0 and role=='Instructor' %}
                        <li class="nav-item">
                            <a class="nav-link nrps"
                               href="#" data-request="{{ path('lti_nrps', {'courseid': course.id}) }}">Compare to eLC
                                Classlist</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link"
                           href="{{ course_path('user_theme', {'courseid': course.id}) }}">Light/Dark</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endif %}

{% extends 'base.html.twig' %}

{% block title %}Course Edit - {{ parent() }}{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">{{ course.name }}</h1>
            {{ include('course/_form.html.twig', {'button_label': 'Update'}) }}

            <p class="alert alert-warning mt-3">Be sure to create your Projects after you have submitted your course information.</p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ckeditor.js') }}"></script>
    <script>
        let editor;
        ClassicEditor.create(document.getElementById("announcement_announcement"), {
            toolbar: {
                items: [
                    'undo', 'redo',
                    'bold', 'italic', 'strikethrough', '|',
                    'bulletedList', 'numberedList', '|',
                    'outdent', 'indent', '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor', 'highlight', '|'
                ],
                shouldNotGroupWhenFull: true
            },
        })
            .then(newEditor => {
                editor = newEditor;
            });
    </script>
{% endblock %}

<form class="d-inline float-end" method="post" action="{{ path('term_delete', {'id': term.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ term.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>

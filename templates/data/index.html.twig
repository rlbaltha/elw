{% extends 'base.html.twig' %}

{% block title %}Hello DataController!{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1>Hello, Dear Administrators.</h1>
        <p>I hope you are having a really good day today.</p>

        <div class="row">
            <div class="col">
                <h2>Courses by Term</h2>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Year</td>
                        <td>Semester</td>
                        <td>Count</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for term in course_count %}
                        <tr>
                            <td>{{ term.year }}</td>
                            <td>{{ term.semester }}</td>
                            <td>{{ term.termcount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <h2>Docs by Term</h2>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Year</td>
                        <td>Semester</td>
                        <td>Count</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for term in doc_count %}
                        <tr>
                            <td>{{ term.year }}</td>
                            <td>{{ term.semester }}</td>
                            <td>{{ term.termcount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <h2 class="d-inline">Rubrics used in {{ term.semester }} {{ term.year }}</h2>
                <div class="ms-3 d-inline dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuTerms" data-bs-toggle="dropdown" aria-expanded="false">
                        Rubrics by Term
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuTerms">
                        {% set rubricid = 0 %}
                        {% for rubric in rubric_count%}{% if loop.first %}{% set rubricid %}{{ rubric.id }}{% endset %}{% endif %}{% endfor %}
                        {% for term in terms %}
                            <li><a class="dropdown-item" href="{{ path('rubric_data', {'termid': term.id, 'rubricid': rubricid}) }}">{{ term.semester }} {{ term.year }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Rubric</td>
                        <td>Count</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for rubric in rubric_count %}
                        <tr>
                            <td> <a href="{{ path('rubric_data', {'termid': term.id, 'rubricid': rubric.id}) }}">{{ rubric.name }}</a></td>
                            <td>{{ rubric.rubriccount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>


            <div class="col">
                <h2>Classlist Count by Term</h2>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Year</td>
                        <td>Semester</td>
                        <td>Count</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for term in classlist_count %}
                        <tr>
                            <td>{{ term.year }}</td>
                            <td>{{ term.semester }}</td>
                            <td>{{ term.termcount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <h2>Journal by Term</h2>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Year</td>
                        <td>Semester</td>
                        <td>Count</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for term in journal_count %}
                        <tr>
                            <td>{{ term.year }}</td>
                            <td>{{ term.semester }}</td>
                            <td>{{ term.termcount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <h2>Courses by Type in {{ term.semester }} {{ term.year }}</h2>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Course</td>
                        <td>Count</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for course in coursetype_count %}
                        <tr>
                            <td>{{ course.coursetype }}</td>
                            <td>{{ course.coursecount }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

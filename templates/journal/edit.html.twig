{% extends 'base.html.twig' %}

{% block title %}Edit Doc{% endblock %}

{% block subnav %}
    <li class="navbar-brand">{{ doc.title }}</li>
    <li class="nav-item">
        <a href="#" id="submit-doc-form" class="nav-link">Save</a>
    </li>
{% endblock %}

{% block subnavright %}
    <li class="nav-item">
        <a id="delete-trigger" class="nav-link" href="#">Delete</a>
        {{ include('journal/_delete_form.html.twig') }}
    </li>
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col">{{ include('doc/_form.html.twig', {'button_label': 'Update'}) }}</div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $("#submit-doc-form").click(function () {
                $("#doc-form").submit(); // Submit the form
            });
            {# Delete doc trigger#}
            $('#delete-trigger').click(function () {
                $("#delete-form").submit();
            });
        });
    </script>
{% endblock %}
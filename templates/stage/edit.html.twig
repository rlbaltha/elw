{% extends 'base.html.twig' %}

{% block title %}Stage Edit - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/colorPick.css') }}">
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Edit Stage</h1>
            {{ include('stage/_form.html.twig', {'button_label': 'Update'}) }}

            {{ include('stage/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/colorPick.js') }}"></script>
    <script>
        $(document).ready(function () {
            var color = $("#stage_color").val();
            $("#stage_color").colorPick({
                'initialColor': color,
                'palette': ['darkblue', 'rebeccapurple', 'darkred', 'darkgreen', 'midnightblue', 'darkolivegreen', 'black', 'teal', 'darkmagenta', 'saddlebrown', 'blue', 'crimson'],
                'onColorSelected': function () {
                    this.element.css({'backgroundColor': this.color, 'color': 'white'});
                    var selectedColor = this.color;
                    selectedColor = selectedColor.toLowerCase();
                    this.element.val(selectedColor);
                }
            });
            {% if not is_granted('ROLE_ADMIN') %}
            $('#stage_level').hide();
            $('#stage_level').prev().hide();
            {% endif %}
        });
    </script>
{% endblock %}
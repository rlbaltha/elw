{% extends 'base.html.twig' %}

{% block title %}Classlist index{% endblock %}

{% block body %}
    <h1>Classlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classlist in classlists %}
            <tr>
                <td>{{ classlist.id }}</td>
                <td>{{ classlist.role }}</td>
                <td>
                    <a href="{{ path('classlist_show', {'id': classlist.id}) }}">show</a>
                    <a href="{{ path('classlist_edit', {'id': classlist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classlist_new') }}">Create new</a>
{% endblock %}

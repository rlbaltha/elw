{# twig template for ajax fragment #}

<div id="comment{{ doc.id }}" class="card mt-3">
    {% for comment in doc.comments %}
        <div class="card-header">
            {% if comment.access=='Hidden' %}
                <span class="badge badge-primary" style="background:black">Hidden</span>
            {% endif %}
            {% if app.user == comment.user %}
                <a class="btn btn-primary btn-sm  comment_ajax"
                   data-id="comment{{ doc.id }}"
                   href="#"
                   data-request="{{ path('comment_ajax_edit', {'docid': doc.id, 'source': 'journal', 'id': comment.id}) }}"
                >Edit End Comment</a>
            {% endif %}
        </div>
        <div class="card-body">
            {{ comment.body|raw }}
        </div>
        {% if comment.grade %}
            <div class="card-footer">
                Grade: {{ comment.grade }}
            </div>
        {% endif %}
    {% endfor %}
</div>





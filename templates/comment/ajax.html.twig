<script>
    $(document).ready(function () {
        // submit form comments via ajax
        $("#ajax_submit").click(function () {
            var form = $('#ajax');
            var target = '#comment{{ doc.id }}';
            $.ajax({
                url: form.attr('action'),
                method: 'POST',
                data: form.serialize(),
                success: function (result) {
                    $(target).replaceWith(result);
                },
            });
        });
    });
</script>




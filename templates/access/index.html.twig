{% extends 'base.html.twig' %}

{% block title %}Access index{% endblock %}

{% block body %}
    <h1>Access index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Color</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for access in accesses %}
            <tr>
                <td>{{ access.id }}</td>
                <td>{{ access.name }}</td>
                <td>{{ access.color }}</td>
                <td>
                    <a href="{{ path('access_show', {'id': access.id}) }}">show</a>
                    <a href="{{ path('access_edit', {'id': access.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('access_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}eLW Homepage - {{ parent() }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <h1 class="display-4" style='color:#ba0c2f; font-family: "serif"; '>eLearning for Writers</h1>
        <p class="lead"><span id="motto1" style="opacity: 0">Learn together. </span><span id="motto2"
                                                                                          style="opacity: 0">Write better.</span>
        </p>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $("#motto1").delay( 800 ).animate({
                opacity: '1'
            }, "slow");
            $("#motto2").delay( 2000 ).animate({
                opacity: '1'
            }, "slow");
        });
    </script>

{% endblock %}

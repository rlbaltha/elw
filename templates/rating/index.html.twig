{% extends 'base.html.twig' %}

{% block title %}Rating index{% endblock %}

{% block body %}
    <h1>Rating index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Scale</th>
                <th>Comment</th>
                <th>User</th>
                <th>Document</th>
                <th>Rubric</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rating in ratings %}
            <tr>
                <td>{{ rating.id }}</td>
                <td>{{ rating.scale }}</td>
                <td>{{ rating.comment }}</td>
                <td>{{ rating.user.firstname }} {{ rating.user.lastname }}</td>
                <td>{{ rating.doc.title }}</td>
                <td>{{ rating.rubric.name }}</td>
                <td>
                    <a href="{{ path('rating_show', {'id': rating.id}) }}">show</a>
                    <a href="{{ path('rating_edit', {'id': rating.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

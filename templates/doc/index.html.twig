{% extends 'base.html.twig' %}

{% block title %}Doc index{% endblock %}

{% block subnav %}
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Documents
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ course_path('doc_index') }}">List Docs</a>
            <a class="dropdown-item" href="{{ course_path('doc_new') }}">Create Doc</a>
        </div>
    </li>
{% endblock %}

{% block body %}
    <h1>Doc index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
        {% for doc in docs %}
            <tr>
                <td><a href="{{ course_path('doc_show', {'id': doc.id}) }}">{{ doc.title }}</a></td>
                <td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

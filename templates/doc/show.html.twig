{% extends 'base.html.twig' %}

{% block title %}Doc{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/ckeditor_document.css') }}">
{% endblock %}

{% block subnav %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('doc_index') }}">Documents</a>
    </li>
    <li class="nav-item">
        <a class="nav-link disabled" href="#">{{ doc.title }}</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('doc_edit', {'id': doc.id}) }}">Edit</a>
    </li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="document-editor">
                {{ doc.body|raw }}
            </div>
        </div>
        <div class="col"></div>
    </div>

    {#    {{ include('doc/_delete_form.html.twig') }}#}
{% endblock %}

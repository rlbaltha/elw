{% extends 'base.html.twig' %}

{% block title %}Edit Doc{% endblock %}

{% block subnav %}
    <a class="navbar-brand" href="#">{{ doc.title }}</a>
    <li class="nav-item">
        <a href="#" id="submit-doc-form" class="nav-link">Submit</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ course_path('doc_show', {'id': doc.id}) }}">Close</a>
    </li>
    <li class="nav-item">
        {{ include('doc/_delete_form.html.twig') }}
    </li>
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col">{{ include('doc/_form.html.twig', {'button_label': 'Update'}) }}</div>
        <div class="col"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $("#submit-doc-form").click(function () {
                $("#doc-form").submit(); // Submit the form
            });
        });
    </script>
{% endblock %}